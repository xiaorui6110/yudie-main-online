#PUT /search_keyword
{
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "keyword": {
        "type": "text",
        "fields": {
          "ik": {
            "type": "text",
            "analyzer": "ik_smart"
          },
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "type": {
        "type": "keyword"
      },
      "count": {
        "type": "long"
      },
      "createTime": {
        "type": "date",
        "format": "strict_date_time||strict_date_optional_time||epoch_millis"
      },
      "updateTime": {
        "type": "date",
        "format": "strict_date_time||strict_date_optional_time||epoch_millis"
      }
    }
  },
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 1
    },
    "analysis": {
      "analyzer": {
        "ik_smart": {
          "type": "custom",
          "tokenizer": "ik_smart",
          "filter": ["lowercase"]
        }
      }
    }
  }
}
