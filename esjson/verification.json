# 1. 检查索引是否存在
GET /_cat/indices?v

# 2. 检查图片索引的文档数量
GET /picture/_count
{
"query": {
"match_all": {}
}
}

# 3. 检查用户索引的文档数量
GET /user/_count
{
"query": {
"match_all": {}
}
}

# 4. 抽样检查图片数据
GET /picture/_search
{
"size": 5,
"query": {
"match_all": {}
},
"sort": [
{
"createTime": {
"order": "desc"
}
}
]
}

# 5. 抽样检查用户数据
GET /user/_search
{
"size": 5,
"query": {
"match_all": {}
},
"sort": [
{
"createTime": {
"order": "desc"
}
}
]
}

# 6. 验证图片搜索功能
GET /picture/_search
{
"query": {
"bool": {
"should": [
{
"match": {
"name": "风景"
}
},
{
"match": {
"introduction": "风景"
}
},
{
"match": {
"tags": "风景"
}
}
],
"minimum_should_match": 1,
"must": [
{
"term": {
"reviewStatus": 1
}
}
]
}
},
"sort": [
{
"_score": {
"order": "desc"
}
},
{
"createTime": {
"order": "desc"
}
}
]
}

# 7. 验证用户搜索功能
GET /user/_search
{
"query": {
"bool": {
"should": [
{
"match": {
"userName": "晓蕊"
}
},
{
"match": {
"userProfile": "晓蕊"
}
}
],
"minimum_should_match": 1,
"must": [
{
"term": {
"isDelete": 0
}
}
]
}
}
}

# 8. 检查最近更新的数据（验证增量同步）
GET /picture/_search
{
"size": 5,
"query": {
"range": {
"updateTime": {
"gte": "now-5m"
}
}
},
"sort": [
{
"updateTime": {
"order": "desc"
}
}
]
}

# 9. 检查索引映射是否正确
GET /picture/_mapping
GET /user/_mapping

# 10. 检查分词效果
POST /picture/_analyze
{
"analyzer": "ik_max_word",
"text": "美丽的风景照片"
}
