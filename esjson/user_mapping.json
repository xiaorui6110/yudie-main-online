#PUT /user
{
  "mappings": {
    "properties": {
      "id": {
        "type": "long"
      },
      "userAccount": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        },
        "analyzer": "standard"
      },
      "userName": {
        "type": "text",
        "fields": {
          "ik": {
            "type": "text",
            "analyzer": "ik_smart"
          },
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "userAvatar": {
        "type": "keyword"
      },
      "userProfile": {
        "type": "text",
        "fields": {
          "ik": {
            "type": "text",
            "analyzer": "ik_smart"
          },
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "userRole": {
        "type": "keyword"
      },
      "editTime": {
        "type": "date",
        "format": "strict_date_time||strict_date_optional_time||epoch_millis"
      },
      "createTime": {
        "type": "date",
        "format": "strict_date_time||strict_date_optional_time||epoch_millis"
      },
      "updateTime": {
        "type": "date",
        "format": "strict_date_time||strict_date_optional_time||epoch_millis"
      },
      "isDelete": {
        "type": "integer"
      }
    }
  },
  "settings": {
    "analysis": {
      "analyzer": {
        "text_analyzer": {
          "tokenizer": "ik_max_word",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  }
}
